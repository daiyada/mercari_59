.hi-container
  = render 'items/header'
  .hi-container__navigation
    .hi-container__navigation__text
      - breadcrumb :regicard
      = breadcrumbs pretext: "",separator: " &rsaquo; "
  .hi-container__wrapper
    .hi-container__wrapper__main
      = render 'users/left-side-bar'
      .hi-container__wrapper__main__right
        .hi-container__wrapper__main__right__head
          支払い方法
        .hi-container__wrapper__main__right__content
          .hi-container__wrapper__main__right__content__title
            クレジットカード一覧
          .hi-container__wrapper__main__right__content__card-info
            - if @card.brand == "Visa"
              %img{class: "visa", src: "https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2561606804"}
            - elsif @card.brand == "JCB"
              %img{class: "jcb", src: "https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2687693852"}
            - elsif @card.brand == "American Express"
              %img{class: "americanexpress", src: "https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2561606804"}
            - elsif @card.brand == "MasterCard"
              %img{class: "mastercard", src: "https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2561606804"}
            - else @card.brand == "Diner's Club"
              %img{class: "dinersclub", src: "https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2561606804"}
            .hi-container__wrapper__main__right__content__card-info__num
              = "***********" + @card.last4
            .hi-container__wrapper__main__right__content__card-info__dead
              = "#{@card.exp_month}/#{@card.exp_year-2000}" 
            = link_to "/cards/1", method: :delete, class: "hi-container__wrapper__main__right__content__card-info__delete-btn" do
              .hi-container__wrapper__main__right__content__card-info__delete-btn__text
                削除する
          .hi-container__wrapper__main__right__content__bottom
            支払い方法について
            = fa_icon "chevron-right"
  = render 'items/footer'